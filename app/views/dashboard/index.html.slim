.row
  .col-md-3
    .panel.panel-default
      .panel-heading =  "Estat√≠sticas do dia"
      ul.panel-body.dashboard-stats
          - [:processing, :failed, :sent, :total].each do |s|
           li[class=s]
             span.caption = t( s , scope: 'message.status').capitalize
             span.stat = stats :today, s

